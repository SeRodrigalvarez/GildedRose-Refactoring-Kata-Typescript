{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "strict": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["app/*"]
    },
    "outDir": "build",
    "skipLibCheck": true
  }
}
